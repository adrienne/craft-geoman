{% import '_includes/forms' as forms %}

{{
	forms.textField({
		label: 'Map Center Latitude',
		id: 'geomanMapLatitude',
		name: 'geomanMapLatitude',
		value: field['geomanMapLatitude'],
		required: true,
		errors: field.getErrors('geomanMapLatitude')
	})
}}

{{
	forms.textField({
		label: 'Map Center Longitude',
		id: 'geomanMapLongitude',
		name: 'geomanMapLongitude',
		value: field['geomanMapLongitude'],
		required: true
	})
}}

{{
	forms.textField({
		label: 'Map Zoom'|t('geoman'),
		id: 'geomanMapZoom',
		name: 'geomanMapZoom',
		value: field['geomanMapZoom'],
		required: true
	})
}}
